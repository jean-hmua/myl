<p id="notice"><%= notice %></p>

<p>Song Texts from <%= @user.email %> id: <%= @user.id %> </p>

<table class=container>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @song_texts.each do |song_text| %>
      <tr>
        
        <td><%= link_to "#{song_text.id} #{song_text.title}", song_text %></td>
        <td><%= link_to 'Edit', edit_song_text_path(song_text) %></td>
        <td><%= link_to 'Destroy', song_text, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Song Text', new_song_text_path %>
